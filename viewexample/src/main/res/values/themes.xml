<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/DefaultButtonAppearance</item>
    </style>

    <style name="DefaultButtonAppearance" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="Text.Appearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="Text.Appearance.H1">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="Text.Appearance.H2">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="Text.Appearance.H3">
        <item name="android:textSize">32sp</item>
        <item name="android:background">@color/yellow</item>
    </style>

</resources>